@model IEnumerable<TestForASPCORE.Models.ProductCategory>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div class="float-right">
    <form asp-controller="Category" asp-action="Index">
        <span class="btn-group">
            <input name="searchText" id="txtSearch" type="text" class="form-control" />
            <input type="submit" id="btnSearch" value="Search" class="btn btn-primary" />
        </span>

    </form>

</div>
<div id="MyPopup" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <span id="lblError"></span>
            </div>
            <div class="modal-footer">
                <input type="button" id="btnClosePopup" value="Close" class="btn btn-danger" data-dismiss="modal" />
            </div>
        </div>
    </div>
</div>

<div id="grdCategory">
    <div class="table-responsive-md">
        <table class="table table-bordered table-md" id="categoryTable">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Actions
                    </th>


                </tr>
            </thead>
            <tbody>
                @if (Model.Count() != 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Update", new { id = item.id, item.name }, new { @class = "btn btn-success" })
                                @*@Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |*@
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })*@
                                <a class="btn btn-danger delete" data-id="@item.id" data-controller="Category" data-action="delete" data-body-message="Are you sure?"> Delete</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center">No Record Found!</td>
                    </tr>
                }

            </tbody>
        </table>
        <input id="txtDisplayError" type="text" style="display:none;" data-message="@ViewBag.Message2"/>
    </div>
  

</div>
<p class="float-right">
    <br/>
    <a asp-action="Insert" class="btn btn-primary">Create New</a>
</p>
 